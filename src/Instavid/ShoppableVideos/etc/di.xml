<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Instavid\ShoppableVideos\Service\WebhookService">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
            <argument name="scopeConfig" xsi:type="object">Magento\Framework\App\Config\ScopeConfigInterface</argument>
            <argument name="httpClientFactory" xsi:type="object">Magento\Framework\HTTP\Client\CurlFactory</argument>
            <argument name="jsonSerializer" xsi:type="object">Magento\Framework\Serialize\Serializer\Json</argument>
        </arguments>
    </type>
    
    <type name="Instavid\ShoppableVideos\Helper\Attribution">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
            <argument name="request" xsi:type="object">Magento\Framework\App\RequestInterface</argument>
            <argument name="url" xsi:type="object">Magento\Framework\UrlInterface</argument>
        </arguments>
    </type>
    
    <type name="Instavid\ShoppableVideos\Observer\ProductSaveAfter">
        <arguments>
            <argument name="webhookService" xsi:type="object">Instavid\ShoppableVideos\Service\WebhookService</argument>
        </arguments>
    </type>
    
    <type name="Instavid\ShoppableVideos\Observer\ProductDeleteAfter">
        <arguments>
            <argument name="webhookService" xsi:type="object">Instavid\ShoppableVideos\Service\WebhookService</argument>
        </arguments>
    </type>
    
    <type name="Instavid\ShoppableVideos\Observer\OrderPlaceAfter">
        <arguments>
            <argument name="webhookService" xsi:type="object">Instavid\ShoppableVideos\Service\WebhookService</argument>
            <argument name="attributionHelper" xsi:type="object">Instavid\ShoppableVideos\Helper\Attribution</argument>
        </arguments>
    </type>
    
    <type name="Instavid\ShoppableVideos\Controller\Cart\Add">
        <arguments>
            <argument name="attributionHelper" xsi:type="object">Instavid\ShoppableVideos\Helper\Attribution</argument>
            <argument name="resourceConnection" xsi:type="object">Magento\Framework\App\ResourceConnection</argument>
        </arguments>
    </type>
</config> 